<div class="flex flex-row w-full h-full">
    <div class="md:w-5/6 bg-gray-200 mx-auto md:mx-0 h-screen w-full flex items-center content-center justify-center">
      <form class=" flex flex-col mt-3" style="direction: rtl">
        <input
          type="text"
          name="name"
          id="name"
          placeholder="نام و نام خانوادگی"
          class="form_signup p-4 mx-1 my-1 bg-gray-100 border-gray-300 border-b-2 focus:outline-none"
        />
        <input
          type="text"
          name="nationalcode"
          id="nationalcode"
          placeholder="کد ملی"
          class="form_signup p-4 mx-1 my-1 bg-gray-100 border-gray-300 border-b-2 focus:outline-none"
        />
        <select
          name="gender"
          id="gender"
          aria-placeholder="جنسیت"
          class="form_signup p-4 mx-1 my-1 bg-gray-100 border-gray-300 border-b-2 focus:outline-none"
        >
          <option value="آقا" class="option" id="genderM">آقا</option>
          <option value="خانم" class="option" id="genderF">خانم</option>
        </select>
        <input
          type="number"
          name="age"
          id="age"
          placeholder="سن"
          class="form_signup p-4 mx-1 my-1 bg-gray-100 border-gray-300 border-b-2 focus:outline-none"
        />

        <input
          type="text"
          name="username"
          id="phone"
          placeholder="شماره تلفن"
          class="p-4 mx-1 my-1 bg-gray-100 border-gray-300 border-b-2 focus:outline-none"
        />
        <input
          type="password"
          name="password"
          id="password"
          placeholder="رمز ورود"
          class="p-4 mx-1 mt-1 bg-gray-100 border-gray-300 border-b-2 focus:outline-none"
        />

        <button
          type="submit"
          class="btn_submit_login bg-gray-300 w-3/4 mx-auto p-4 mt-3"
          id="saveDataBtn"
        >
          تغییر اطلاعات
        </button>
    </div>
    <%- include('templatetest'); -%>
  </div>
<script src="/public/script/setting.js"></script>
  